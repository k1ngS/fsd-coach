{
  "name": "fsd-coach-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "test:watch": "pnpm -r run test:watch",
    "typecheck": "pnpm -r run typecheck",
    "dev": "pnpm -r --parallel run dev",
    "clean": "pnpm -r exec rm -rf dist node_modules && rm -rf node_modules",
    "clean:build": "pnpm -r exec rm -rf dist",
    "link:local": "pnpm link --global && cd packages/cli && pnpm link --global",
    "test:ci": "pnpm -r run test --reporter=verbose --coverage",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,json,md}\"",
    "prepublishOnly": "pnpm run clean:build && pnpm run build && pnpm test",
    "dev:cli": "pnpm --filter fsd-coach dev",
    "dev:core": "pnpm --filter @fsd-coach/core dev",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.x",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "tsup": "^8.x",
    "typescript": "^5.x",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.21.0"
}
